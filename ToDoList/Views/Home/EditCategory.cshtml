@model Category

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>ADD NEW TASK</title>
        <link rel="stylesheet" href="~/css/EditCategory.css"/>
    </head>
    <body>
        <div class="header">
            <span class="site-name">TO DO LIST</span>
            <nav>
                <span class="nav-item"><a asp-controller="Home" asp-action="TasksList">Task List</a></span>
                <span class="nav-item"><a asp-controller="Home" asp-action="CategoriesList">Categories</a></span>
            </nav>
        </div>
        <div class="main">
            <form class="add-new-task-box" asp-controller="Home" asp-action="UpdateEditedCategory" method="post">
                <div class="item">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <label for="Name">Category Name</label>
                    <input name="Name" type="text" value="@Model.Name" required/>
                </div>
                <div class="item">
                    <label for="Description">Description</label>
                    <input name="Description" type="text" value="@Model.Description" />
                </div>
                <div class="buttons">
                    <button type="submit">OK</button>
                </div>
            </form>
        </div>
    </body>
</html>